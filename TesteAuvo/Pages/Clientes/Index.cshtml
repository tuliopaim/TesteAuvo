@page
@model TesteAuvo.Pages.Clientes.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="container p-5">
    <div class="row card p-5">
        <h1 class="mb-4 display-2">Lista de Clientes</h1>

        <div class="card-deck">
            @foreach (var cliente in Model.Clientes)
            {
                var photo = "~/assets/" + (cliente.Imagem ?? "default-profile.svg");

                <div class="card p-3 m-3 card-clientes" style="max-width: 30%">
                    <img class="card-img-top" src="@photo" alt="@cliente.Nome" asp-append-version="true">
                    <div class="card-body">
                        <h5 class="card-title">@cliente.Nome</h5>
                        <p class="card-text">@cliente.Email</p>
                        <div class="row">
                            <a class="btn btn-outline-primary ml-auto" asp-page="/Clientes/Detalhes" asp-route-ID="@cliente.Id">Abrir</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Styles
{
    <link href="~/css/clientes.css" rel="stylesheet" />
}

@section Scripts
{
    <script src="~/js/clientes.js"></script>
}

