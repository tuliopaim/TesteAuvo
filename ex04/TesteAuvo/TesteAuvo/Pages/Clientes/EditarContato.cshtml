@page "{id:min(1)}"
@model TesteAuvo.Pages.Clientes.EditarContatoModel
@{
    ViewData["Title"] = "EditarContato";
}

<h1>Editar Contato</h1>

<form method="post" class="mt-4">
    <input hidden asp-for="Contato.Id" />

    <div class="form-group row">
        <label asp-for="Contato.Nome" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="Contato.Nome" type="text" class="form-control" placeholder="Nome" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Contato.Cargo" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="Contato.Cargo" type="text" class="form-control" placeholder="Cargo" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Contato.Telefone" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="Contato.Telefone" type="text" class="form-control" placeholder="Telefone" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Contato.Email" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="Contato.Email" type="text" class="form-control" placeholder="Email" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Atualizar</button>
            <a asp-page="/Clientes/Detalhes" asp-route-ID="@Model.Contato.IdCliente" class="btn btn-outline-primary">
                Cancelar
            </a>
        </div>

    </div>

</form>